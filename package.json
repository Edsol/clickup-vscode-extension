{
	"name": "clickup",
	"displayName": "clickup",
	"description": "integrates clickup and its workflows into vscode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:clickup.helloWorld",
		"onCommand:clickup.setToken",
		"onCommand:clickup.getTasks",
		"onCommand:clickup.deleteTasks",
		"onView:clickupTasksView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "clickup",
					"title": "ClickUp",
					"icon": "./resources/bar/logo.png"
				}
			]
		},
		"commands": [
			{
				"command": "clickup.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "clickup.setToken",
				"title": "ClickUp: Add personal token"
			},
			{
				"command": "clickup.getToken",
				"title": "ClickUp: Get personal token"
			},
			{
				"command": "clickup.getTasks",
				"title": "ClickUp: get all tasks"
			},
			{
				"command": "clickup.refreshTasksList",
				"title": "Reload",
				"icon": "$(refresh)"
			},
			{
				"command": "clickup.clearTasksList",
				"title": "Clear"
			},
			{
				"command": "clickup.deleteTask",
				"title": "delete",
				"icon": "$(gear)"
			},
			{
				"command": "clickup.editTask",
				"title": "Edit",
				"icon": "$(trash)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "clickup.refreshTasksList",
					"when": "view == clickupTasksView",
					"group": "navigation"
				},
				{
					"command": "clickup.clearList",
					"when": "view == clickupTasksView"
				}
			],
			"view/item/context": [
				{
					"command": "clickup.editTask",
					"when": "viewItem == taskItem",
					"group": "inline"
				},
				{
					"command": "clickup.deleteTask",
					"when": "viewItem == taskItem"
				}
			]
		},
		"views": {
			"clickup": [
				{
					"id": "clickupTasksView",
					"name": "Tasks list"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "clickupTasksView",
				"contents": "Generate a token to load tasks, [learn more](https://www.clickup.com).\n[Set token](command:clickup.setToken)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"clickup.js": "^3.0.1"
	}
}